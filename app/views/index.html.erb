
<h1>List of Users</h1>


<table border="1">
  <tr>

    <th>
      Username
    </th>

    <th>
    Private
    </th>
  </tr>

  <% @list_of_users.each do |a_user| %>
    <tr>

    <td>
    <%= a_user.username %>
    </td>  



<% if a_user.private %>
    <td>
Yes
    </td>  
<% else %>
    <td>
No
    </td> 
  
<% end %>

<% if session.fetch(:user_id) !=nil%>
    <td>
    <form action="/insert_followrequest">
    <button>Follow</button>
    </form>
    </td>  
<% end %>

    <td>
        <a href= "/users/<%= a_user.username %>">
Show Details
        </a>
    </td>  

    </tr>
<% end %>
</table>